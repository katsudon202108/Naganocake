<div class="container">
  <div class="row">
    <div class="col-2 mt-5">
      <%= render 'items/genre' %>
    </div>

    <div class="col-10 mt-5">
      <div class="d-flex font-weight-bold">
        <h3 class="font-weight-bold" >商品一覧</h3>
        <p class="d-flex align-items-end mb-2">（全<%= @total_items.count %>件）</p>
      </div>
      <div class="d-flex flex-wrap">
        <% @items.each do |item| %>
          <div class="mr-3 mb-3">
            <%= attachment_image_tag item, :image, :fill,210,150 %>
            <p><%= link_to item.name, item_path(item) %></p>
            ¥<%= item.add_tax_price.to_s(:delimited) %>　<!--add_tax_priceはモデルで定義　税率は8%で計算-->
          </div>
        <% end %>
        <div class="mx-auto"><%= paginate @items %></div>
      </div>
    </div>
  </div>
</div>