<div class="container">
  <div class="row pt-5">
    <div class="col-2">
      <%= render 'items/genre', genres: @genres %>
    </div>
    <div class="card offset-1 shadow" style="width: 550px;">
      <div>
        <%= attachment_image_tag @item, :image, :fill,550,350, class:"rounded" %>
      </div>
      <h3 class="card-header font-weight-bold"><%= @item.name %></h3>
      <div class="card-body">
        <h3><%= @item.introduction %></h3>
        <h4>税込価格: <%= @item.add_tax_price.to_s(:delimited) %>円</h4>
      </div>
      <div class="card-footer ">
        <% if customer_signed_in? %>
          <% unless @item.is_active == false %>
            <%= form_with url: cart_items_path, model: @cart_item, method: :post, local: true do |f| %>
              <%= f.select :quantity, [*1..10], selected: 1 %>
              <%= f.hidden_field :item_id, value: @item.id %>
              <%= f.hidden_field :customer_id, value: current_customer.id %>
              <%= f.button :type => 'submit', class:"btn btn-sm btn-success px-4 ml-3"  do %>
                <i class="fas fa-cart-plus"></i>
              <% end %>
            <% end %>
          <% else %>
            <h4>申し訳ありません。販売中止中です</h4>
          <% end %>
         <% end %>
      </div>
    </div>
  </div>
</div>