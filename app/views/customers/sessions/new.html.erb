<div class='sign-bg'>
  <div class='sign-bg-rgba'>
    <div class="offset-2" style='padding-top: 7%;'>
      <h4 class="d-inline" style='text-shadow: 1px 2px 3px #808080;'>ログイン</h4>
      <%= flash[:error] %>
      <div class="mx-2 my-4"><h5 class="d-inline bg-light">会員の方はこちらからログイン</h5></div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス, class:"col-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", size: 50, class:'col-3 px-1'%>
        </div>

        <div class="field my-2">
          <%= f.label :パスワード,class:"col-2" %>
          <%= f.password_field :password, autocomplete: "current-password", size: 50, class:'col-3 px-1'%>
        </div>

        <div class="actions offset-2 my-4">
          <%= f.submit "ログイン" , class:"btn btn-sm btn-primary col-1" %>
        </div>
      <% end %>

      <div class="m-3"><h5 class="d-inline">会員登録がお済みでない方</h5></div>
      <p class="offset-1"><%= link_to 'こちら', new_customer_registration_path %>から新規登録を行ってください。</p>
    </div>
  </div>
</div>