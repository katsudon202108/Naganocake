<div class="offset-2">
  <div class="my-4"><h4 class="d-inline bg-light">新規会員登録</h4></div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>

    <div class="form-row">
      <div class="col-2">名前</div>
      <div class="field">
        <%= f.label :'(姓)', class:"mr-3" %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和" %>
      </div>
      <div class="field">
        <%= f.label :'(名)', class:"mx-3" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "道子" %>
      </div>
    </div>
    <div class="form-row">
      <div class="col-2">フリガナ</div>
      <div class="field">
        <%= f.label :'(セイ)' %>
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana",  placeholder: "レイワ" %>
      </div>
      <div class="field">
        <%= f.label :'(メイ)', class:"ml-3" %>
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "ミチコ" %>
      </div>
    </div>
    <div class="form-row">
      <div class="col-2">メールアドレス</div>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class:"ml-5 mb-1" %>
      </div>
    </div>
    <div class="form-row">
      <div class="col-2">郵便番号(ハイフンなし)</div>
      <div class="field">
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "0000000",  class:"ml-5 mb-1" %>
      </div>
    </div>
    <div class="form-row">
      <div class="col-2">住所</div>
      <div class="field">
        <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0", size: 50, class:"ml-5 mb-1" %>
      </div>
    </div>
    <div class="form-row">
      <div class="col-2">電話番号(ハイフンなし)</div>
      <div class="field">
        <%= f.text_field :tel_number, autofocus: true, autocomplete: "tel_number", placeholder: "00000000000", class:"ml-5 mb-1" %>
      </div>
    </div>
    <div class="form-row">
      <div class="col-2">パスワード(６文字以上)</div>
      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password",  class:"ml-5 mb-1"%>
      </div>
    </div>
    <div class="form-row">
      <div class="col-2">パスワード(確認用)</div>
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"ml-5 mb-1" %>
      </div>
    </div>
    <div class="actions offset-2 mt-3">
      <%= f.submit "新規会員登録", class:"btn btn-sm btn-success col-2 ml-5" %>
    </div>
  <% end %>

  <div class="my-4"><h5 class="d-inline bg-light">既に登録済みの方</h5></div>
  <p class="offset-1"><%= link_to 'こちら', new_customer_session_path %>からログインを行ってください。</p>
</div>

