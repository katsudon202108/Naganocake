<div class='form-group d-flex'>
  <%= f.label :postal_code, '郵便番号（ハイフンなし）', class:'col-3 px-0' %>
  <%= f.text_field :postal_code, placeholder:'0000000', class:'col-3 form-control' %>
</div>
<div class='form-group d-flex'>
  <%= f.label :address, '住所', class:'col-3 px-0' %>
  <%= f.text_field :address, size:'50', placeholder:'東京都渋谷区代々木神園町0-0', class:'col-7 form-control', style:'background: rgba(255, 255, 255, 0.9);' %>
</div>
<div class='form-group d-flex'>
  <%= f.label :name, '宛名', class:'col-3 px-0' %>
  <%= f.text_field :name, placeholder:'令和道子', class:'col-3 form-control' %>
</div>