<div class='address-bg'>
  <div class='container pt-5'>
    <%= render 'layouts/error', obj: @address %>
    <div>
      <h2 class='mb-5'>配送先登録 / 一覧</h2>
      <div class='ml-4'>
        <%= form_with model: @address, local:true do |f| %>
          <%= render 'addresses/form', f: f %>
          <%= f.submit '新規登録', class:'btn btn-success' %>
        <% end %>
      </div>
    </div>
    <div class='col-md-9 mt-5'>
      <table class='table table-bordered bg-light'>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td class='text-center'>
              <%= link_to '編集する', edit_address_path(address), class:'btn btn-primary mr-3' %>
              <%= link_to '消去する', address_path(address), method: :delete, class:'btn btn-danger' %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>