<div class='container mt-5'>
  <div>
    <h2 class='mb-5'>配送先登録 / 一覧</h2>
    <%= form_with model: @address, local:true do |f| %>
      <div class='form-group d-flex'>
        <%= f.label :postal_code, '郵便番号（ハイフンなし）' %>
        <%= f.text_field :postal_code, placeholder:'0000000' %>
      </div>
      <div class='form-group'>
        <%= f.label :address, '住所' %>
        <%= f.text_field :address, size:'50', placeholder:'東京都渋谷区代々木神園町0-0' %>
      </div>
      <div class='form-group'>
        <%= f.label :name, '宛名' %>
        <%= f.text_field :name, placeholder:'令和道子' %>
        <%= f.submit '新規登録', class:'btn btn-success' %>
      </div>
    <% end %>
  </div>
  <div class='col-md-9 mt-5'>
    <table class='table table-bordered'>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td class='text-center'>
            <%= link_to '編集する', edit_address_path(address), class:'btn btn-primary mr-3' %>
            <%= link_to '消去する', address_path(address), method: :delete, class:'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>