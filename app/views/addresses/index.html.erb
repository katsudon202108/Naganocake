<div class='address-bg'>
  <div class='address-bg-rgba'>
    <div class='container py-5'>
      <%= render 'layouts/error', obj: @address %>
      <div>
        <h3 class='mb-5' style='text-shadow: 1px 2px 3px #808080;'>配送先登録 / 一覧</h3>
        <div class='ml-4'>
          <%= form_with model: @address, local:true do |f| %>
            <%= render 'addresses/form', f: f %>
            <%= f.submit '新規登録', class:'btn btn-success' %>
          <% end %>
        </div>
      </div>
      <div class='col-md-9 mt-5'>
        <table class='table table-bordered' style='background: rgba(255, 255, 255, 0.7);'>
          <tr class='bg-light'>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td class='text-center'>
                <%= link_to '編集する', edit_address_path(address), class:'btn btn-primary mr-3' %>
                <%= link_to '消去する', address_path(address), method: :delete, class:'btn btn-danger' %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
