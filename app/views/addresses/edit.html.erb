  <div class='container'>
    <h2 class='mb-5'>配送先編集</h2>
    <%= form_with model: @address, local:true do |f| %>
      <div class='form-group d-flex'>
        <%= f.label :postal_code, '郵便番号（ハイフンなし）' %>
        <%= f.text_field :postal_code, placeholder:'0000000' %>
      </div>
      <div class='form-group'>
        <%= f.label :address, '住所' %>
        <%= f.text_field :address, size:'50', placeholder:'東京都渋谷区代々木神園町0-0' %>
      </div>
      <div class='form-group'>
        <%= f.label :name, '宛名' %>
        <%= f.text_field :name, placeholder:'令和道子' %>
        <%= f.submit '変更内容を保存', class:'btn btn-success' %>
      </div>
    <% end %>
  </div>