<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class='navbar navbar-expand-md  border-bottom ' style='height: 130px'>
        <div class='container'>
          <a class="navbar-brand text-dark" href="/">NAGANO CAKE</a>
          <% if customer_signed_in? %>
            ようこそ、<%= @customer.last_name %>さん !
          <% end %>
          <div>
            <ul class="navbar-nav ml-auto">
              <% if customer_signed_in? %>
                <li><%= link_to 'マイページ', customers_my_page_path, class:'nav-link text-dark' %></li>
                <li><%= link_to '商品一覧', items_path, class:'nav-link text-dark' %></li>
                <li><%= link_to 'カート', cart_items_path, class:'nav-link text-dark' %></li>
                <li><%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class:'nav-link text-dark' %></li>
              <% elsif admin_signed_in? %>
                <li><%= link_to '商品一覧', items_path, class:'nav-link text-dark' %></li>
                <li><%= link_to '会員一覧', admin_customers_path, class:'nav-link text-dark' %></li>
                <li><%= link_to '注文履歴一覧', admin_orders_path, class:'nav-link text-dark' %></li>
                <li><%= link_to 'ジャンル一覧', admin_genres_path, class:'nav-link text-dark' %></li>
                <li><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class:'nav-link text-dark' %></li>
              <% else %>
                <li><%= link_to 'about', about_path, class:'nav-link text-dark' %></li>
                <li><%= link_to '商品一覧', items_path, class:'nav-link text-dark' %></li>
                <li><%= link_to '新規登録', new_customer_registration_path, class:'nav-link text-dark' %></li>
                <li><%= link_to 'ログイン', new_customer_session_path, class:'nav-link text-dark' %></li>
              <% end %>
            </ul>
          </div>
        </div>

      </nav>
    </header>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
