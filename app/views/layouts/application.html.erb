<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
  </head>

  <body>
    <header style='background-color: #82654D'>
      <nav class='navbar navbar-expand-md  border-bottom ' style='height: 140px'>
        <div class='container'>
          <a href="/">
            <img class="header-logo" src=<%= asset_path('NaganoCake.png') %> width="250" height="125">
          </a>
          <% if customer_signed_in? %>
            ようこそ、<%= @customer.last_name %>さん !
          <% end %>
          <div>
            <ul class="navbar-nav ml-auto">
              <% if customer_signed_in? %>
                <li><%= link_to 'マイページ', customers_my_page_path, class:'nav-link text-dark font-weight-bold mr-1' %></li>
                <li><%= link_to '商品一覧', items_path, class:'nav-link text-dark font-weight-bold mr-1' %></li>
                <li><%= link_to 'カート', cart_items_path, class:'nav-link text-dark font-weight-bold mr-1' %></li>
                <li><%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class:'nav-link text-dark font-weight-bold' %></li>
              <% elsif admin_signed_in? %>
                <li><%= link_to '商品一覧', admin_items_path, class:'nav-link text-dark font-weight-bold' %></li>
                <li><%= link_to '会員一覧', admin_customers_path, class:'nav-link text-dark font-weight-bold' %></li>
                <li><%= link_to '注文履歴一覧', admin_orders_path, class:'nav-link text-dark font-weight-bold' %></li>
                <li><%= link_to 'ジャンル一覧', admin_genres_path, class:'nav-link text-dark font-weight-bold' %></li>
                <li><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class:'nav-link text-dark font-weight-bold' %></li>
              <% else %>
                <li><%= link_to 'about', about_path, class:'nav-link text-dark font-weight-bold mr-1' %></li>
                <li><%= link_to '商品一覧', items_path, class:'nav-link text-dark font-weight-bold mr-1' %></li>
                <li><%= link_to '新規登録', new_customer_registration_path, class:'nav-link text-dark font-weight-bold mr-1' %></li>
                <li><%= link_to 'ログイン', new_customer_session_path, class:'nav-link text-dark font-weight-bold' %></li>
              <% end %>
            </ul>
            <div class='mt-2'>
              <%= form_with url: items_path, method: :get, local:true do |f| %>
                <div class='col-8 offset-4 border d-flex px-0 bg-white'>
                  <%= f.text_field :content, placeholder: 'Search', class:'border-0 col-10' %>
                  <%= f.submit "\uf002", style:'font-family: FontAwesome', class:'btn btn-default text-primary col-2 px-0 py-1' %>
                </div>
              <% end %>
            </div>
          </div>
        </div>

      </nav>
    </header>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
