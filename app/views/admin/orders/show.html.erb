<div class="container">
  <div class="row" style="width:60%; margin:0 auto;">
  <%= form_for(@order, url:admin_order_path(@order), method: :patch) do |f| %>
  <h4 style="margin-bottom: 20px; border-left: 2px solid #2D6F4C; padding: 10px;">注文詳細画面</h4>
    <table class="table table-bordered">
		<tr>
			<th>購入者</th>
			<td><%= link_to  admin_customer_path(@order.id) do %>
					<%= @order.customer.last_name %>
					<%= @order.customer.first_name %>
					<% end %>
			</td>
		</tr>
	  <tr>
			<th>配送先</th>
			<td>
			  <%= @order.postal_code %>
				<%= @order.address %>
				<br>
				<%= @order.customer.last_name %>
				<%= @order.customer.first_name %>
			</td>
		</tr>
		<tr>
			<th>支払方法</th>
			<td><%= @order.payment_way_i18n %></td>
		</tr>
		<tr>
			<th>注文ステータス</th>
			<td>
				<%= f.select :status, Order.statuses.keys.map{ |k| k } %>
			</td>
		</tr>
	  </table>

    <table class="table table-bordered">
      <tr>
			  <th>商品名</th>
			  <th>単価(税込)</th>
  			<th>数量</th>
  			<th>小計</th>
  			<th>制作ステータス</th>
  		</tr>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= (cart_item.item.price * 1.08).floor %></td>
          <td><%= cart_item.quantity %></td>
          <td><%= (cart_item.item.price * 1.08).floor * cart_item.quantity %></td>
  			  <td>
  			  	<%= cart_item.select :make_status, OrderItem.make_statuses.keys.map{ |l| l } %>
		  			<label>現在ステータス：</label>
						<% case cart_item.make_status when "製作待ち" %>
							<span class="badge" style="background: red;"><%= cart_item.make_status %></span>
						<% when "製作中" %>
							<span class="badge" style="background: green;"><%= cart_item.make_status %></span>
						<% when "製作完了" %>
							<span class="badge" style="background: blue;"><%= cart_item.make_status %></span>
						<% end %>
		  			</td>
		  		</tr>
      <% end %>
	  </table>
  <% end %>
  </div>

	<table class="table table-bordered">
		<tr>
			<th style="width:30%;">商品合計</th>
			<td><%= addTax(@items.sum(:price)) %>円</td>
		</tr>
		<tr>
			<th style="width:30%;">配送料</th>
			<td><%= @order.postage %>円</td>
		</tr>
		<tr>
			<th style="width:30%;">請求金額合計</th>
			<td><%= addTax(@items.sum(:price)) + @order.postage %>円</td>
		</tr>
	</table>
	<div class="text-center">
		<%= f.submit '更新する', class:"btn btn-success" %>
	</div>
 </div>