<div class='container px-5 px-sm-0 mt-5'>
  <div class='row'>
    <div class='col-md-8 mx-auto'>
      <h3>会員一覧</h3>
      <table class='table table-hover table-inverse mt-4'>
        <thead>
          <tr>
            <th class='col-2'>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.last_name + customer.first_name , admin_customer_path(customer) %></td>
              <td><%= customer.email %></td>
              <td class>
                <% if customer.is_deleted %>
                  <p class='text-secondary'>退会</p>
                <% else %>
                  <p class='text-success'>有効</p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>