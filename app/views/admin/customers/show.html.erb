<div class="container">
  <div class="row">
    <div class="col-11 mx-auto">
      <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報</h3>


      <table class="col-7 table table-bordered border-primary mt-3">
        <tr>
          <td class="table-secondary">会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td class="table-secondary">氏名</td>
          <td><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <td class="table-secondary">フリカナ</td>
          <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td class="table-secondary">郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td class="table-secondary">住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td class="table-secondary">電話番号</td>
          <td><%= @customer.tel_number %></td>
        </tr>
        <tr>
          <td class="table-secondary">メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </table>
      <div class="d-flex">
        <%= link_to '編集する', edit_admin_customer_path(@customer), class:"btn btn-sm btn-success mx-3" %>
      </div>
      <div class="d-flex">
        <%= link_to '注文履歴一覧を見る', edit_admin_customer_path(@customer), class:"btn btn-sm btn-primary" %>
    </div>
  </div>
</div>