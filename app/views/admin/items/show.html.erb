<div class="admin-photo">
  <div class='container'>
    <div class='row pt-4'>
      <div class="col-sm-12 col-md-10 col-lg-9 px-5 px-sm-0 mx-auto">
        <h3 class="d-inline bg-light offset-1">商品詳細</h3>
        <div class="d-flex mt-4">
          <div class="form-group col-6">
            <%= attachment_image_tag @item, :image, :fill,300,200  %>
          </div>
          <div class="col-6">
            <div class="row">
              <p class="col-4">商品名</p>
              <p class="col-8"><%= @item.name %></p>
            </div>
            <div class="row">
              <p class="col-4">商品説明</p>
              <p class="col-8"><%= @item.introduction %></p>
            </div>
            <div class="row">
              <p class="col-4">ジャンル</p>
              <p class="col-8"><%= @item.genre.name %></p>
            </div>
            <div class="row">
              <p class="col-4">税込価格<br>(税抜価格)</p>
              <p class="col-8 d-flex align-items-center"><%= (@item.add_tax_price).to_s(:delimited) %>(<%= (@item.price).to_s(:delimited) %>)円</p>
            </div>
            <div class="row">
              <p class="col-4">販売ステータス</p>
              <div class="col-8">
                <% if @item.is_active == true %>
                  <p class="text-success font-weight-bold">販売中</p>
                <% else %>
                  <p class="text-secondary font-weight-bold">販売停止中</p>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="d-flex justify-content-center mt-4">
          <%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
</div>