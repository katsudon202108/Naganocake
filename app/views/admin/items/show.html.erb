<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>商品詳細</h2>
    <div class="form-group">
      <%= attachment_image_tag @item, :image %>
    </div>
    <div class="form-group">
      商品名:<%= @item.name %>
    </div>
    <div class="form-group">
      商品説明:<%= @item.introduction %>
    </div>
    <div class="form-group">
      税抜価格:<%= @item.price %>
    </div>
    <div class="form-group">
      <%= link_to 'Edit', edit_admin_item_path(@item), class: "btn btn-sm btn-success" %>
    </div>
  </div>
</div>