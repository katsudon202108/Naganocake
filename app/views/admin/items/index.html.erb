<div class='container px-5 px-sm-0'>
  <div class='row mt-4'>
    <div class='col-md-11 mx-auto'>
      <div class="d-flex justify-content-between">
        <h3 class="d-inline bg-light">商品一覧</h3>
        <%= link_to '+', new_admin_item_path, class:"rounded-circle shadow py-2 px-3 text-secondary" %>
      </div>
      <table class='table table-hover table-inverse mt-4'>
        <thead>
          <tr>
            <th class="col-1">商品ID</th>
            <th>商品名</th>
            <th class="col-2">税抜価格</th>
            <th>ジャンル</th>
            <th class="col-2">販売ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item) %></td>
              <td><%= (item.price).to_s(:delimited) %></td>
              <td><%= item.genre.name %></td>
              <td>
                <% if item.is_active == true %>
                  <p class="text-success font-weight-bold">販売中</p>
                <% else %>
                  <p class="text-secondary font-weight-bold">販売停止中</p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center"><%= paginate @items %></div>
    </div>
  </div>
</div>