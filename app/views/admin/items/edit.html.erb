<div class='container'>
  <div class='row mt-4'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h3 class="d-inline bg-light">商品</h3>
    <%= form_with model: [:admin, @item], local:true do |f| %>
      <div class="form-group row mt-3">
        <%= f.label :商品画像, class:"col-4" %>
        <%= f.attachment_field :image %>
      </div>
      <div class="form-group row">
        <%= f.label :商品名, class:"col-4" %>
        <%= f.text_field :name, class:"col-7 p-0" %>
      </div>
      <div class="form-group row">
        <%= f.label :商品説明, class:"col-4" %>
        <%= f.text_area :introduction, class:"col-7 p-0", style:"height:130px;" %>
      </div>
      <div class="form-group row">
        <%= f.label :ジャンル, class:"col-4" %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: "選択してください"}, class: "col-7 p-0" %>
      </div>
      <div class="form-group row">
        <%= f.label :税抜価格, class:"col-4" %>
        <%= f.text_field :price, class:"col-7 p-0" %>円
      </div>
      <div class="form-group row">
        <%= f.label :販売ステータス, class:"col-4" %>
        <%= f.radio_button :is_active, :true, class:"mt-1" %>
        <%= f.label :販売中 %>
        <%= f.radio_button :is_active, :false, class:"mt-1 ml-3" %>
        <%= f.label :販売停止中 %>
      </div>
      <div class="d-flex justify-content-center mt-4">
        <%= f.submit '変更を保存', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>