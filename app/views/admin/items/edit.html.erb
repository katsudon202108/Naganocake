<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>商品</h2>
    <%= form_with model: [:admin, @item], local:true do |f| %>
      <div class="form-group">
        <%= f.label :商品画像 %>
        <%= f.attachment_field :image, class: "form-control-file image" %>
      </div>
      <div class="form-group">
        <%= f.label :商品名 %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :商品説明 %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.label :ジャンル %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name %>
      </div>
      <div class="form-group">
        <%= f.label :税抜価格 %>
        <%= f.text_field :price, class: "form-control price" %>円
      </div>
      <div class="form-group">
        <%= f.label :販売ステータス %>
        <%= f.radio_button :is_acitve, {prompt: true}, class: "form-control is_acitve" %>
        <%= f.label :販売中 %>
        <%= f.radio_button :is_acitve, {prompt: false}, class: "form-control is_acitve" %>
        <%= f.label :販売停止中 %>
      </div>
      <div class="form-group">
        <%= f.submit '変更を保存', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>