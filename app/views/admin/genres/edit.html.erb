<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>ジャンル編集</h2>
      <%= form_with model: [:admin, @genre], local:true do |f| %>
        <div class="form-group">
          <%= f.label :ジャンル名 %>
          <%= f.text_field :name, class: "form-control-name" %>
          <%= f.submit '変更を保存', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>