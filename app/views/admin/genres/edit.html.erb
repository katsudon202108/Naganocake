<div class='container mt-5'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3>ジャンル編集</h3>
      <%= form_with model: [:admin, @genre], local:true, class:'mt-5' do |f| %>
        <div class="form-group">
          <%= f.label :ジャンル名, class:'mr-5 font-weight-bold' %>
          <%= f.text_field :name, class: "form-control-name px-0 mr-5" %>
          <%= f.submit '変更を保存', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>