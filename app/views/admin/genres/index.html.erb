<div class='container mt-5'>
  <div class='row'>
    <div class="col-sm-12 px-5 px-sm-0">
      <h3>ジャンル一覧・追加</h3>
      <%= form_with model: [:admin, @genre], local:true, class:'mt-5' do |f| %>
        <div class="form-group">
          <%= f.label :ジャンル名, class:'col-2 font-weight-bold' %>
          <%= f.text_field :name, class: "col-md-3 form-control-name px-0", placeholder: 'ジャンル名' %>
        </div>
        <div class="form-group row mt-3">
          <%= f.label :ジャンル画像, class:"col-2 font-weight-bold" %>
          <%= f.attachment_field :image, class:'px-3'%>
          <%= f.submit '新規登録', class: 'btn btn-success' %>
        </div>
      <% end %>
      <div class="d-flex flex-wrap mt-5">
        <% @genres.each do |genre| %>
          <div class="col-3 px-2 mb-4">
            <%= attachment_image_tag genre, :image, :fill,260,200 %>
            <p class='font-weight-bold text-dark mt-2 mb-2' style='font-size: 20px;'><%= genre.name %></p>
            <%= link_to '編集する', edit_admin_genre_path(genre), class:"btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>