<div class='container mt-5'>
  <div class='row'>
    <div class="col-sm-12 px-5 px-sm-0">
      <h3>ジャンル一覧・追加</h3>
      <%= form_with model: [:admin, @genre], local:true, class:'mt-5' do |f| %>
        <div class="form-group">
          <%= f.label :ジャンル名, class:'mr-5 font-weight-bold' %>
          <%= f.text_field :name, class: "col-md-3 form-control-name px-0 mr-5", placeholder: 'ジャンル名' %>
          <%= f.submit '新規登録', class: 'btn btn-success' %>
        </div>
      <% end %>
      <div class='col-md-4 px-0'>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr class='bg-light'>
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td class='align-middle'><%= genre.name %></td>
                <td class='col-5 text-center'>
                  <%= link_to '編集する', edit_admin_genre_path(genre), class:"btn btn-success" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>