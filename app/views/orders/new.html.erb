<div class='container mt-5'>
  <h3>注文情報入力</h3>
  <%= form_with model: @oreder, url: orders_confirm_path, local:true do |f| %>
    <p class='font-weight-bold mb-0'>支払方法</p>
    <div class='ml-4'>
      <%= f.check_box :payment_way, {}, 'card' %>
      <%= f.label :payment_way, 'クレジットカード' %><br>
      <%= f.check_box :payment_way, {}, 'bank' %>
      <%= f.label :payment_way, '銀行振込' %>
  　</div>
  　<p class='font-weight-bold mb-0'>お届け先</p>
    <div class='ml-4'>
      <div class='form-group'>
        <%= f.check_box :now_address, {}, '現在の住所', nil %>
        <%= f.label :now_address, '現在の住所' %>
        <p class='ml-4'>
          〒<%= @customer.postal_code %> <%= @customer.address %><br>
          <%= @customer.last_name + @customer.first_name %>
        </p>
      </div>
      <div class='form-group'>
        <%= f.check_box :select_address, {}, '登録済住所', nil %>
        <%= f.label :select_address, '登録済住所から選択' %>
        <div class='ml-4'>
          <select name="select">
            <% @customer.addresses.each do |address| %>
              <option value=<%= address.id %>>〒<%= address.postal_code %> <%= address.address %>　<%= address.name %></option>
            <% end %>
          </select>
        </div>
      </div>
      <%= f.check_box :new_address, {}, '現在の住所', nil %>
      <%= f.label :new_address, '新しいお届け先' %>
      <div class='ml-4'>
        <div class='form-group d-flex'>
          <%= f.label :postal_code, '郵便番号（ハイフンなし）', class:'col-3 px-0' %>
          <%= f.text_field :postal_code, placeholder:'0000000', class:'col-3 form-control' %>
        </div>
        <div class='form-group d-flex'>
          <%= f.label :address, '住所', class:'col-3 px-0' %>
          <%= f.text_field :address, size:'50', placeholder:'東京都渋谷区代々木神園町0-0', class:'col-7 form-control' %>
        </div>
        <div class='form-group d-flex'>
          <%= f.label :name, '宛名', class:'col-3 px-0' %>
          <%= f.text_field :name, placeholder:'令和道子', class:'col-3 form-control' %>
        </div>
      </div>
    </div>
    <div class='form-group text-center'>
      <%= f.submit '確認画面へ進む', class:'btn btn-primary' %>
    </div>
  <% end %>

</div>

